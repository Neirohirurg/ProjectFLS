<Page x:Class="ProjectFLS.Logist.LogistMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectFLS.Logist"
      mc:Ignorable="d" 
      Title="LogistMainPage" Loaded="Page_Loaded">

    <Page.Resources>
        <!-- Анимация боковой панели -->
        <Storyboard x:Key="SlideInSidebar">
            <DoubleAnimation Storyboard.TargetName="SidebarTransform"
                             Storyboard.TargetProperty="X"
                             From="200" To="0"
                             Duration="0:0:0.8"
                             DecelerationRatio="0.9"/>
        </Storyboard>

        <!-- Анимация вертикальной полоски -->
        <Storyboard x:Key="GrowVerticalLine">
            <DoubleAnimation Storyboard.TargetName="AnimatedLine"
                             Storyboard.TargetProperty="Height"
                             From="0" To="190"
                             Duration="0:0:1"
                             DecelerationRatio="0.9"/>
        </Storyboard>
    </Page.Resources>

    <Grid Margin="0,5,0,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Боковое меню -->
        <StackPanel Grid.Column="0" Background="#F8F8F8">
            <StackPanel.RenderTransform>
                <TranslateTransform x:Name="SidebarTransform" X="200"/>
            </StackPanel.RenderTransform>

            <!-- Существующий Border с кнопками -->
            <Border Margin="0,41,0,0">
                <Grid>
                    <!-- Кнопки -->
                    <StackPanel Margin="10" x:Name="ButtonsPanel">
                        <Button x:Name="applications" Content="Заявки" Style="{StaticResource RoundButtonStyle}" />
                        <Button x:Name="deliveries" Content="Поставки" Style="{StaticResource RoundButtonStyle}" />
                        <Button x:Name="routes" Content="Маршруты" Style="{StaticResource RoundButtonStyle}" />
                    </StackPanel>

                    <!-- Вертикальная полоска справа -->
                    <Rectangle x:Name="AnimatedLine"
                               Width="1"
                               Height="0"
                               Fill="Black"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Top"
                               Margin="0,10,0,0"/>
                    <!-- отступ сверху -->
                </Grid>
            </Border>
        </StackPanel>

        <!-- Контент -->
        <Border Grid.Column="1" BorderBrush="#CCC" BorderThickness="1" CornerRadius="4" Padding="10">
            <Frame x:Name="LogistMainFrame" NavigationUIVisibility="Hidden" Navigated="LogistMainFrame_Navigated"/>
        </Border>
    </Grid>
</Page>
