<Page x:Class="ProjectFLS.Admin.AdminMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectFLS.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminMainPage">
    
    <Grid>

        <Grid.ColumnDefinitions>
            <!-- Боковое меню -->
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <!-- Фрейм -->
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="White" Margin="0,100,10,0">
            <Border BorderBrush="#000000" BorderThickness="0,0,1,0" Height="269" Width="193">
                <StackPanel x:Name="stackPanel1" Margin="11,0,12,0">
                    <Button x:Name="button4" Content="Заявки" Style="{StaticResource RoundButtonStyle}" />
                    <Button x:Name="button2" Content="Маршруты" Style="{StaticResource RoundButtonStyle}" />
                    <Button x:Name="button1" Content="Поставки" Style="{StaticResource RoundButtonStyle}" />
                    <Button x:Name="button3" Content="История" Style="{StaticResource RoundButtonStyle}" />
                </StackPanel>
            </Border>
        </StackPanel>
        
        
    </Grid>
</Page>
