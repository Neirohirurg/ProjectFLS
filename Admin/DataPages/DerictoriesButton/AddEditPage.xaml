<Page x:Class="ProjectFLS.Admin.DataPages.DerictoriesButton.AddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectFLS.Admin.DataPages.DerictoriesButton.Derictories"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditPage" Loaded="Page_Loaded" Unloaded="Page_Unloaded">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Контейнер для динамических полей -->
        <StackPanel x:Name="FieldsContainer" Grid.Row="0" Orientation="Vertical" Margin="0,0,0,20"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center">
            <Button Content="Сохранить" Style="{StaticResource RoundButtonStyle}" Click="Save_Click"/>
            <Button Content="Отмена" Style="{StaticResource RoundButtonStyle}" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
