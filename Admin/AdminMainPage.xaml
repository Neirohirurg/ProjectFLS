<Page x:Name="adminMainPage" x:Class="ProjectFLS.Admin.AdminMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ProjectFLS.Admin"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminMainPage" Loaded="Page_Loaded">

    <Grid Margin="0,5,0,5">
        <Grid.ColumnDefinitions>
            <!-- Боковое меню -->
            <ColumnDefinition Width="200"/>
            <!-- Контент -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Боковое меню -->
        <StackPanel Grid.Column="0" Background="#F8F8F8">
            <Border BorderThickness="0,0,1,0" BorderBrush="#000" Margin="0,41,0,0">
                <StackPanel Margin="10">
                    <Button x:Name="users" Content="Пользователи"  Style="{StaticResource RoundButtonStyle}" Click="users_Click"/>
                    <Button x:Name="button4" Content="Заявки"  Style="{StaticResource RoundButtonStyle}" />
                    <Button x:Name="button2" Content="Маршруты"  Style="{StaticResource RoundButtonStyle}" />
                    <Button x:Name="button3" Content="История"  Style="{StaticResource RoundButtonStyle}" />
                    <Button x:Name="button5" Content="Настройки"  Style="{StaticResource RoundButtonStyle}" />
                    <Button x:Name="button6" Content="Выход"  Style="{StaticResource RoundButtonStyle}" />
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Контентный фрейм -->
        <Border Grid.Column="1" BorderBrush="#CCC" BorderThickness="1" CornerRadius="4" Padding="10">
            <Frame x:Name="AdminMainFrame" NavigationUIVisibility="Hidden" Navigated="AdminMainFrame_Navigated"/>
        </Border>
    </Grid>
</Page>
