<Page x:Class="ProjectFLS.Admin.DataPages.AddEditUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Добавление / Редактирование пользователя"
      Background="White">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="750" Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- ФИО -->
            <ColumnDefinition Width="250"/>
            <!-- Логин и Пароль -->
            <ColumnDefinition Width="250"/>
            <!-- Роль -->
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Строка 1 -->
            <RowDefinition Height="Auto"/>
            <!-- Строка 2 -->
            <RowDefinition Height="Auto"/>
            <!-- Строка 3 -->
            <RowDefinition Height="40"/>
            <!-- Отступ перед кнопками -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопки -->
        </Grid.RowDefinitions>

        <!-- Фамилия -->
        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Vertical" Margin="5">
            <Label Content="Фамилия:" 
                   VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,0,2"
                   Target="{Binding ElementName=SurnameTextBox}"
                   Style="{StaticResource labelForm}"/>
            <TextBox x:Name="SurnameTextBox" Style="{StaticResource textBoxForm}" Width="230"/>
        </StackPanel>

        <!-- Имя -->
        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Vertical" Margin="5">
            <Label Content="Имя:" 
                   VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,0,2"
                   Target="{Binding ElementName=FirstnameTextBox}"
                   Style="{StaticResource labelForm}"/>
            <TextBox x:Name="FirstnameTextBox" Style="{StaticResource textBoxForm}" Width="230"/>
        </StackPanel>

        <!-- Отчество -->
        <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Vertical" Margin="5">
            <Label Content="Отчество:" 
                   VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,0,2"
                   Target="{Binding ElementName=PatronymicTextBox}"
                   Style="{StaticResource labelForm}"/>
            <TextBox x:Name="PatronymicTextBox" Style="{StaticResource textBoxForm}" Width="230"/>
        </StackPanel>

        <!-- Логин -->
        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Vertical" Margin="5">
            <Label Content="Логин:" 
                   VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,0,2"
                   Target="{Binding ElementName=UsernameTextBox}"
                   Style="{StaticResource labelForm}"/>
            <TextBox x:Name="UsernameTextBox" Style="{StaticResource textBoxForm}" Width="230"/>
        </StackPanel>

        <!-- Пароль -->
        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Vertical" Margin="5">
            <Label Content="Пароль:" 
                   VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,0,2"
                   Target="{Binding ElementName=PasswordBox}"
                   Style="{StaticResource labelForm}"/>
            <PasswordBox x:Name="PasswordBox" Style="{StaticResource passwordBoxForm}" Width="230"/>
            <TextBox x:Name="PasswordVisibleTextBox"
                     Style="{StaticResource textBoxForm}"
                     Width="230"
                     Visibility="Collapsed"/>     
        </StackPanel>

        <CheckBox Grid.Column="1" Grid.Row="2" Content="Показать пароль"
                Style="{StaticResource StableCheckBox}"
                Checked="ShowPasswordCheckBox_Checked"
                Unchecked="ShowPasswordCheckBox_Unchecked" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <!-- Роль -->
        <StackPanel Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" Orientation="Vertical" Margin="5">
            <Label Content="Роль:" 
                   VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,0,6"
                   Target="{Binding ElementName=RoleComboBox}"
                   Style="{StaticResource labelForm}"/>
            <ComboBox x:Name="RoleComboBox" Style="{StaticResource comboBoxForm}" Width="230"
                      DisplayMemberPath="roleName" SelectedValuePath="roleID"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="4" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,20,0,0" >
            <Button Content="Сохранить" Style="{StaticResource RoundButtonStyle}" Width="150" Click="Save_Click"/>
            <Button Content="Отмена" Style="{StaticResource RoundButtonStyle}" Width="150" Height="41" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
